<%= form_for @post do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <%= f.label :content %><br>
  <%= f.text_area :content %><br>
  <%= f.label :select_blogger %><br>
  <%= f.select :blogger_id, @bloggers.map{|b| [b.name, b.id]} %><br>
  <%= f.label :select_destination %><br>
  <%= f.select :destination_id, @destinations.map{|d| [d.location, d.id]} %><br><br>
  <%= f.submit "Submit Post" %>
<% end %>
