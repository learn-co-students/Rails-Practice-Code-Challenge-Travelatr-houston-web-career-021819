<%= form_for @post do |f| %>
    <%=f.label :title %><br>
    <%=f.text_field :title %><br>
    <%=f.label :blogger_id, :blogger %><br>
    <%=f.collection_select :blogger_id, @bloggers, :id, :name%><br>
    <%=f.label :destination_id, :destination %><br>
    <%=f.collection_select :destination_id, @destinations, :id, :readable_name%><br>
    <%=f.label :content %><br>
    <%=f.text_area :content, size: "100x20" %><br>
    <%=f.submit%>
<% end %>

<p>
    <%= link_to 'Back to Home Page', posts_path %>
</p>